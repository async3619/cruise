{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "@/*": ["src-renderer/*"],
            "@components/*": ["src-renderer/components/*"],
            "@pages/*": ["src-renderer/pages/*"],
            "@styles/*": ["src-renderer/styles/*"],
            "@utils/*": ["src-renderer/utils/*"],
            "@constants/*": ["src-renderer/constants/*"],
            "@main/*": ["src/*"],
            "@common/*": ["common/*"],
            "@queries": ["src-renderer/queries/index.tsx"],
            "@player/*": ["src-renderer/player/*"],
            "@graphql/*": ["src-renderer/graphql/*"],
            "@renderer/*": ["src-renderer/*"],
            "@dialogs/*": ["src-renderer/components/Dialogs/*"],
            "@dialogs": ["src-renderer/components/Dialogs/index.ts"]
        },
        "plugins": [
            {
                "transform": "typia/lib/transform"
            }
        ]
    },
    "include": ["src-renderer", "src", "scripts", "common", "package.json"],
    "references": [{ "path": "./tsconfig.node.json" }]
}
