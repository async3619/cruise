{
    "extends": "tsconfig/base.json",
    "compilerOptions": {
        "module": "commonjs",
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2021",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./src",
        "incremental": true,
        "strictNullChecks": true,
        "noImplicitAny": false,
        "strictBindCallApply": true,
        "noFallthroughCasesInSwitch": false,
        "resolveJsonModule": true,
        "paths": {
            "@root/*": ["./*"],
            "@nest/*": ["./nest/*"],
            "@electron/*": ["./electron/*"],
            "@config/*": ["./config/*"],
            "@utils/*": ["./utils/*"],
            "@library/*": ["./library/*"],
            "@music/*": ["./music/*"],
            "@base/*": ["./base/*"],
            "@album/*": ["./album/*"]
        }
    }
}
