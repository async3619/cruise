{
    "extends": "tsconfig/base.json",
    "compilerOptions": {
        "module": "commonjs",
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2021",
        "sourceMap": true,
        "noEmit": true,
        "baseUrl": "./",
        "incremental": true,
        "strictNullChecks": true,
        "noImplicitAny": false,
        "strictBindCallApply": true,
        "noFallthroughCasesInSwitch": false
    },
    "include": ["scripts"]
}
